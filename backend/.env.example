# DataViewer Backend Configuration

# API Settings
API_V1_STR=/api
PROJECT_NAME=DataViewer

# CORS Settings (comma-separated list of allowed origins)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# File Upload Settings
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=data
ALLOWED_EXTENSIONS=.csv

# SQL Server Settings
SQL_SERVER_DRIVER=ODBC Driver 17 for SQL Server
SQL_CONNECTION_TIMEOUT=30
SQL_QUERY_TIMEOUT=300

# Data Processing Settings
MAX_ROWS_PREVIEW=1000
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=10000

# Cache Settings
CACHE_TTL=3600  # 1 hour in seconds

# Server Settings (for uvicorn)
HOST=0.0.0.0
PORT=8000
RELOAD=True
